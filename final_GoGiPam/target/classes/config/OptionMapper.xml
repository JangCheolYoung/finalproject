<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="option">
	<select id="loadFullOption" parameterType="java.lang.String" resultType="dto.OptionDTO">
		select * from options where item_key = #{item_key}
	</select>
	
	<select id="loadOptionKey" parameterType="dto.OptionDTO" resultType="String">
		select option_key from options where item_key = #{item_key} and option_name = #{option_name}
	</select>
	
	<select id="loadOption" parameterType="java.lang.String" resultType="String">
		select option_name from options where option_key = #{option_key}
	</select>
  </mapper>